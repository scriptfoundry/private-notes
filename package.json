{
  "name": "private-notes",
  "productName": "Private Notes",
  "description": "Private notes saved to a SQLite database",
  "version": "0.1.0",
  "author": "",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "@babel/runtime": "^7.4.5",
    "ajv": "^6.10.0",
    "electron-is-dev": "^0.3.0",
    "node-sass": "^4.12.0",
    "prop-types": "^15.6.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-scripts": "^3.1.1",
    "typescript": "^3.5.1"
  },
  "devDependencies": {
    "electron": "^5.0.10",
    "electron-builder": "^20.42.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "css": "node-sass src/ -o src/ --recursive",
    "css:watch": "node-sass src/ -o src/ --recursive --watch",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron:dist": "electron-builder"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "build": {
    "appId": "com.scriptfoundry.securenotes",
    "productName": "Private Notes",
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg"
      ],
      "icon": "assets/icons/mac/1024x1024.png.icns"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icons/win/1024x1024.png.ico"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 Chrome version"
    ]
  }
}
